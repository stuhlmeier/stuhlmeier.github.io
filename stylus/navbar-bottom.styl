#navbar-bottom
  display: flex
  flex-direction: row
  align-items: center

#navbar-bottom a
  margin: 0 1px

#navbar-bottom img
  margin: 0 2px
  height: 20px

#navbar-bottom a
  color: var(--main-content-color)

.vseparator
  display: inline-block
  height: 24px
  width: 1px
  margin: 0 5px
  background-color: var(--focus-border-color)

@media screen and (max-width: 768px)
  footer
    margin-top: 30px
    margin-bottom: 60px
    align-items: center

  footer nav
    margin-bottom: 10px

  #navbar-bottom
    justify-content: center

  #navbar-bottom img
    height: 32px

  #navbar-bottom i.material-icons
    font-size: 36px

  .vseparator
    height: 36px

