@import "media"

#container
  max-width: var(--container-width)
  margin: 40px auto
  box-sizing: border-box
  padding: 30px 60px
  border-left: 1px solid var(--border-color)
  border-right: 1px solid var(--border-color)

  @media $screen-large
    border: none

  @media $screen-medium
    margin: 10px
    padding: 0
    border: none

#theme-switcher
  color: var(--subtle-content-color)
  cursor: pointer
  transition: color 0.2s ease
  display: block
  float: right
  font-size: 32pt
  margin: -20px
  padding: 30px

#theme-switcher:hover
  color: var(--side-content-color)

#noscript-warning
  background-color: lemonchiffon
  margin: 10px 0
  padding: 15px

hr
  margin: 20px 0
  border: none
  border-top: 1px solid var(--focus-border-color)

main
  margin: 20px 0

  section + section
    margin-top: 16px

    @media $screen-large
      margin-top: 20px

  p
    margin: 0

  p + p
    margin-top: 16px

footer
  margin-top: 40px
  display: flex
  flex-direction: column
  align-items: flex-start

  @media $screen-medium
    margin-top: 30px
    margin-bottom: 60px
    align-items: center

  p
    margin: 0
    font-size: 10pt
    color: var(--side-content-color)

    @media $screen-large
      font-size: 11pt


    @media $screen-medium
      font-size: 13pt
      text-align: center

  nav
    margin-bottom: 5px

    @media $screen-medium
      margin-bottom: 10px

    a
      text-decoration: none !important

      & > *
        display: block !important

p code
  background-color: var(--block-background-color)
  border: 1px solid var(--border-color)
  font-family: var(--monospace-font)
  display: inline-block
  border-radius: 3px
  padding: 1px 3px
  box-sizing: border-box
