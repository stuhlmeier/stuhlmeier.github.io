    <script>
        const query = [...new Array(6).keys()].map(i => `main section h${i + 1}:first-child`).join(", ");
        for (const heading of document.querySelectorAll(query)) {
            if (heading.id) {
                const link = document.createElement("a");
                link.classList.add("heading-anchor");

                link.href = `#${heading.id}`;
                link.innerHTML = "ยง";

                heading.prepend(link);
            }
        }
    </script>
